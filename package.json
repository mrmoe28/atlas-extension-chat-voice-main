{
  "name": "atlas-voice-extension",
  "version": "0.3.2",
  "type": "module",
  "scripts": {
    "build": "node dev/scripts/build-extension.js",
    "build:zip": "npm run build && cd dev/build-tools/dist && zip -r ../../../atlas-voice-extension.zip .",
    "release": "node dev/scripts/create-release.js",
    "bump": "node dev/scripts/bump-version.js patch",
    "bump:minor": "node dev/scripts/bump-version.js minor",
    "bump:major": "node dev/scripts/bump-version.js major",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!lib/**/*.test.js"
    ]
  }
}
