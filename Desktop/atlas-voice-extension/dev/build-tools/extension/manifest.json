{
  "manifest_version": 3,
  "name": "Atlas Voice Panel",
  "version": "0.2.0",
  "description": "Voice AI assistant with Desktop Commander - screen capture and automation capabilities",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "desktopCapture",
    "tabCapture",
    "tabs",
    "downloads",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://atlas-extension-chat-voice.vercel.app/*",
    "http://localhost:8787/*",
    "<all_urls>"
  ],
  "background": { "service_worker": "background.js" },
  "action": { 
    "default_title": "Atlas Voice Panel"
  },
  "side_panel": { "default_path": "sidepanel.html" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [{
    "resources": ["assets/mic.svg"],
    "matches": ["<all_urls>"]
  }]
}
